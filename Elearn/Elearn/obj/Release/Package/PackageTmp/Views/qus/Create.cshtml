@model Elearn.Models.qu

@{
    ViewBag.Title = "Create";
}



@using (Html.BeginForm()) 
{   
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2">the question</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Qu1, new { htmlAttributes = new { @class = "form-control" , rows = "3"} })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">the answer one</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.An1, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">the answer two</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.An2, new { htmlAttributes = new { @class = "form-control" } }) 
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">the answer three</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.An3, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">the answer Four</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.An4, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">The correct answer</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.QreAn, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Reason</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.reason_an, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
